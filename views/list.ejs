<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://kit.fontawesome.com/775c6d76d9.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="/css/output.css">
</head>
<body class="bg-yellow-300">
    <ul class="flex">
        <form action="/" method="GET">
            <button type="submit" class="border-2 border-black m-4 p-2 rounded bg-red-500">Home</button>
        </form>
        <form action="#" method="GET">
            <button type="submit" class="border-2 border-black m-4 p-2 rounded bg-red-500">Log in</button>
        </form>
    </ul>

    <span class="text-red-500">
        <% if (friend.length > 0) { %>
            <% friend.forEach((friend) => { %>
                <li style="list-style-type:none" class="m-2 p-2 border-2 border-red-500">
                    <header class="flex">
                        <p class="text-1xl font-bold">Name: <%= friend.friendName %></p>
                        <i class="fa-solid fa-user-minus p-1 mx-2 border-2 border-red-500 bg-yellow-400" ></i>
                        <i class="fa-solid fa-pen-to-square p-1 mx-2 border-2 border-red-500 bg-yellow-400"></i>            
                    </header>
                    <p class="text-1xl font-bold">Surname: <%= friend.friendSurname %></p>
                    <p class="text-1xl font-bold">DOB: <%= friend.birthday %></p>
                    <p class="text-1xl font-bold">Age: <%= friend.age %></p>
                </li>
            <% }); %>
          <% } else { %>
            <p>No data available</p>
          <% } %>
    </span>
    <script src='/js/main.js'></script>
</body>
</html>
